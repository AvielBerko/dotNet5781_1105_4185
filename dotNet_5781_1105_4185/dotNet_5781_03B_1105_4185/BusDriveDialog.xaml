<Window x:Class="dotNet_5781_03B_1105_4185.BusDriveDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:dotNet_5781_03B_1105_4185"
		mc:Ignorable="d"
		Title="{Binding Registration}" Height="200" Width="400"
		ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<StackPanel Orientation="Horizontal" Margin="5">
			<Label VerticalAlignment="Center" FontSize="17" Margin="0,0,10,0">Driving Distance:</Label>
			<TextBox Width="175" FontSize="17" Text="{Binding Distance, Mode=TwoWay}" PreviewTextInput="TextBox_PreviewTextInput"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
			<Button Width="75" Click="OkButtonClick" IsDefault="True" Margin="0,0,5,0">OK</Button>
			<Button Width="75" IsCancel="True">Cancel</Button>
		</StackPanel>
	</Grid>
</Window>
